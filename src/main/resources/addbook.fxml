<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane alignment="CENTER" hgap="10.0" vgap="10.0"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="io.github.zy31415.boozoo.components.AddBookController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <VBox id="vbox" prefHeight="450" prefWidth="800" spacing="10.0"
          xmlns:fx="http://javafx.com/fxml">

        <Label><text> Title: </text></Label>
        <TextField id="title" fx:id="title"></TextField>

        <Label><text>Authors:</text></Label>
        <TextField></TextField>

        <Label><text>Edition:</text></Label>
        <TextField></TextField>

        <Label><text>Publisher:</text></Label>
        <TextField></TextField>

        <Label><text>File:</text></Label>
        <TextField></TextField>

        <HBox spacing="10.0" alignment="CENTER">
            <Button fx:id="addBookButton" onAction="#handleAddBookAction">Add</Button>
            <Button fx:id="cancelButton" onAction="#handleCancelAction">Cancel</Button>
        </HBox>

    </VBox>

</GridPane>