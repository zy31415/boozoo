<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import io.github.zy31415.boozoo.components.BookView?>
<?import io.github.zy31415.boozoo.components.BoozooMenuBar?>
<BorderPane id="vbox" prefHeight="400" prefWidth="800"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <BoozooMenuBar fx:id="menuBar"/>
    </top>

    <center>
        <VBox>
            <HBox alignment="CENTER">
                <Label text="Search: " prefWidth="80"/>
                <ComboBox editable="true" maxWidth="Infinity" fx:id="node" prefWidth="400"/>
            </HBox>

            <BookView fx:id="bookView" />
        </VBox>
    </center>

</BorderPane>