<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<fx:root type="io.github.zy31415.boozoo.components.BoozooMenuBar" xmlns:fx="http://javafx.com/fxml">
    <menus>
        <Menu text="File">
            <items>
                <MenuItem text="New"/>
                <MenuItem text="Open"/>
                <MenuItem text="Save"/>
                <MenuItem text="Save As"/>
                <SeparatorMenuItem  />
                <MenuItem text="Exit"/>
            </items>
        </Menu>
        <Menu text="Edit">
            <items>
                <MenuItem text="Copy"/>
                <MenuItem text="Cut"/>
                <MenuItem text="Paste"/>
                <MenuItem text="Add a Book" onAction="#addBookDialog"/>
            </items>
        </Menu>
        <Menu text="Help">
            <items>
                <MenuItem text="Search" disable="true"/>
                <MenuItem text="Online Manual" visible="false"/>
                <SeparatorMenuItem />
                <MenuItem text="About" onAction="#handleAboutAction"/>
            </items>
        </Menu>
    </menus>
</fx:root>

